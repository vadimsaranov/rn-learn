{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@context/*": ["./context/*"],
      "@hooks/*": ["./hooks/*"],
      "@core/*": ["./core/*"],
      "@store/*": ["./store/*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["./app-example/*"]
}
